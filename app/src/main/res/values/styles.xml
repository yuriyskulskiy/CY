<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/accent</item>
    </style>

    <style name="EditTextTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorControlNormal">@color/login_edit_text_not_focus_underline</item>
        <item name="colorControlActivated">@color/login_text</item>
        <item name="colorAccent">@color/md_blue_A400</item>
        <item name="colorControlHighlight">@android:color/holo_red_dark</item>

    </style>

    <style name="DialogStyle" parent="@android:style/Theme.Black.NoTitleBar.Fullscreen">
        <item name="android:windowFullscreen">false</item>

    </style>


    <style name="StyleWindowSoftInputModeAdjustResize" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:windowSoftInputMode">adjustResize</item>
        <item name="android:windowFullscreen">false</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

</resources>
